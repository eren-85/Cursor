# === Application ===
APP_NAME=sigma-analyst
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# === API Keys - Exchange ===
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here

OKX_API_KEY=your_okx_api_key
OKX_API_SECRET=your_okx_secret
OKX_PASSPHRASE=your_okx_passphrase

BYBIT_API_KEY=your_bybit_key
BYBIT_API_SECRET=your_bybit_secret

# === API Keys - On-chain Data ===
GLASSNODE_API_KEY=your_glassnode_key
CRYPTOQUANT_API_KEY=your_cryptoquant_key

# === API Keys - AI/ML (Choose ONE) ===
# OpenAI (Recommended - better limits)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini  # or gpt-4o, gpt-4-turbo

# Anthropic Claude (Alternative)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# === Database ===
POSTGRES_USER=sigma
POSTGRES_PASSWORD=sigma_secure_password_2025
POSTGRES_DB=sigma
POSTGRES_HOST=postgres  # Docker service name (or localhost for manual)
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# === Redis ===
REDIS_HOST=redis  # Docker service name (or localhost for manual)
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# === Celery ===
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# === Pinecone (Vector DB for RAG) ===
PINECONE_API_KEY=your_pinecone_key
PINECONE_ENVIRONMENT=your-environment
PINECONE_INDEX_NAME=sigma-knowledge

# === Security ===
SECRET_KEY=change-this-to-a-random-secret-key-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === CORS ===
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# === Agent Configuration ===
AGENT_MODE=oneshot  # oneshot | monitor
AGENT_TIMEZONE=UTC
AGENT_LOCALE=en-US

# === Risk Management ===
MAX_POSITION_SIZE_PCT=0.20
MAX_LEVERAGE=3.0
MAX_DRAWDOWN_PCT=0.15

# === Data Directory ===
DATA_DIR=./data/historical

# === Monitoring ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
